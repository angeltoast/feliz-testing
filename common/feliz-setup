#!/bin/bash

# Part of the Feliz Arch Linux Installation Scripts
# This script is to be run when Xfce is started
# Developed by Elizabeth Mills

# Thunar actions
if [ ! -d ~/.config/Thunar ]; then
  mkdir ~/.config/Thunar
fi
cp -f /etc/uca.xml ~/.config/Thunar/
cp -f /etc/uca.xml ~/.config/Thunar/

# Conky autostart
case `whereis conky` in
  "conky:") echo "conky not installed" > /etc/feliz-setup.log
  ;;
  *) if [ ! -d ~/.config/autostart ]; then
      mkdir ~/.config/autostart/
    fi
    cp /etc/conky.desktop ~/.config/autostart/
    conky
esac
